#!/bin/bash

if [ "$#" -ne 1 ]; then
    echo "incorrect number of parameters" >&2
    echo "usage: isp-create-project new-directory" >&2
    exit 1
fi

project_dir=$1

if [ -e $project_dir ]; then
    echo "$project_dir already exists" >&2
    echo "usage: isp-create-project new-directory" >&2
    exit 1
fi

cp -r /opt/isp/project_skeleton $project_dir
